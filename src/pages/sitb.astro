---
import SITBLayout from '../layouts/SITBLayout.astro';

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<SITBLayout>
	<header class="absolute z-10 w-full">
		<div class="h-18 bg-neutral-950 flex flex-row justify-between px-4">
			<div class="w-max flex flex-col justify-center">
				<img class="w-20" src="/images/logomark.webp"/>
			</div>
			<div class="flex flex-row w-max">
				<div class="hidden md:flex flex-row items-center pb-0.5 mr-4">
					<div>
						<a href="#shows">
							<img class="h-9 nav-link" src="/images/shows-link.webp" />
						</a>
						<div class="relative width-0">
							<img class="absolute rotate-180 w-10 left-17" style="top: -5px;" src="/images/arrow.webp"/>
						</div>
					</div>
					<div>
						<a href="#submissions">
							<div class="nav-link">
								<img class="h-9 pl-1.5" style="padding-top: 0.5px;" src="/images/submissions-link.webp" />
								<div class="relative width-0">
									<img class="absolute w-3 left-31" style="top: -18px;" src="/images/exclamation.webp"/>
								</div>
							</div>
						</a>
					</div>
					<div>
						<a href="#team">
							<img class="h-9 nav-link" src="/images/team-link.webp" />
						</a>
						<div class="relative width-0">
							<img class="absolute w-9 left-35" style="top: -45px;" src="/images/arrow.webp"/>
							<img class="absolute h-10 left-25" style="top: -2px;" src="/images/arrow-outline.webp"/>
						</div>
					</div>
					<div>
						<a href="#contact">
							<img class="h-9 nav-link" src="/images/contact-link.webp" />
						</a>
					</div>
				</div>
				<div class="flex flex-col justify-center pl-2">
					<img class="w-15" src="/images/logo.webp" />
				</div>
			</div>
		</div>
	</header>

	<section class="h-max sm:h-screen">
		<div class="flex flex-col-reverse sm:flex-row justify-evenly">
			<div class="bg-magenta h-80 sm:h-screen sm:flex-1/2 hidden sm:flex flex-col justify-center bg-[url(/images/icon-background.webp)] bg-size-[auto_1800px] bg-center">
				<div class="flex flex-row justify-center">
					<img src="/images/logo-stairs.webp" class="stairs-logo pr-10 sm:pt-10"/>
				</div>
			</div>
			<div class="h-screen p-10 sm:p-15 sm:pb-30 sm:flex-1/2 bg-neutral-500 bg-[url(/images/hero.webp)] bg-blend-multiply sm:bg-blend-normal bg-top sm:bg-center bg-cover flex flex-col justify-center">
				<div class="flex sm:hidden w-full h-screen flex-row justify-center bg-[url(/images/logo-stairs.webp)] bg-contain bg-center bg-no-repeat">
					
				</div>
			</div>
		</div>
	</section>

	<div class="mh-max bg-crimson bg-[url(images/icon-background.webp)] -z-10" style="background-size: 2700px; background-position-x: -300px; background-position-y: 1500px;">
	<section id="shows">
		<div class="shows-background w-full bg-[url(/images/shows-background.webp)] bg-cover bg-bottom">
			<div class="flex flex-col items-center">
				<div class="flex flex-row mt-15 md:mt-20 2xl:mt-30 gap-4 md:gap-14">
					<img src="images/cheers.webp" class="size-8 md:size-13 2xl:size-16 mt-1.5"/>
					<div class="flex flex-col items-center">
						<h2 class="section-heading font-[Fredoka] font-semibold text-white text-3xl md:text-5xl 2xl:text-6xl">shows</h2>
						<img class="w-13 h-2 md:w-26 md:h-4" src="images/underline.webp"/>
					</div>
					<img src="images/cheers.webp" style="transform: scale(-1, 1);" class="size-8 md:size-13 2xl:size-16 mt-1.5" />
				</div>
				<div class="flex flex-col md:flex-row min-w-full h-max md:h-screen md:mt-16 xl:mt-20 2xl:px-10 items-center md:items-start">
					<div class="wotc-image bg-[url(/images/wotc.webp)] sm:mb-20 md:mb-0 bg-top h-80 sm:h-100 md:h-150 2xl:h-170 mt-10 xl:mt-0 2xl:ml-2 2xl:flex-3/5 w-full bg-contain bg-no-repeat"></div>
					<div class="wotc-text w-full 2xl:flex-2/5 flex flex-col items-center 2xl:mt-13 px-8 sm:px-0 sm:mr-10">
						<div class="mt-3 xl:mt-7 text-center">
							<h4 class="font-[Chopin] text-xl sm:text-3xl 2xl:text-4xl">@ the white bear theatre</h4>
							<h3 class="font-[Fredoka] text-2xl sm:text-4xl  2xl:text-5xl font-semibold">wedding of the century</h3>
							<img class="relative w-15 sm:w-20 2xl:w-30 left-45 sm:left-68 2xl:left-88" style="top: 2px;" src="/images/underline-2.webp"/>
						</div>
						<div class="wotc-caption xs:mx-20 sm:mx-30 md:mx-15 xl:mx-24 2xl:mx-18 mt-10 leading-5.5 flex flex-col items-center sm:text-lg xl:text-xl 2xl:text-2xl">
							<p class="mb-4 ">Gareth and Georgia are getting married today. Which Ro and Mac are fine with. Really.</p>
							<p class="font-light  text-gray-300">Wedding of the Century is a hopeful comedy exploring love and friendship, and what happens when the two really fail to work together nicely.</p>
							<img class="w-16 my-7" src="images/filigree.webp"/>
							<div class="flex flex-col items-center w-full mx-8">
								<div class="w-full flex flex-row justify-between xl:mb-3"><span>production team:</span><span class="text-right">sitb productions</span></div>
								<div class="w-full flex flex-row justify-between mb-4 xl:mb-10"><span>written by:</span><span class="text-right">lucy sargent</span></div>
								<div class="w-full flex flex-row justify-between xl:mb-3"><span>Mac:</span><span class="text-right">macsen brown</span></div>
								<div class="w-full flex flex-row justify-between"><span>Ro:</span><span class="text-right">gabriella shennan</span></div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<div class="h-150 md:h-160 2xl:h-140">
		<section id="submissions" class="mx-4 z-10">
			<div class="flex flex-col items-center mt-5">
				<div class="flex flex-row">
					<img class="w-8 h-3 md:w-11 md:h-4 relative top-7 md:top-12" src="images/pen.webp"/>
					<h2 class="section-heading font-[Fredoka] font-semibold text-white text-3xl md:text-5xl 2xl:text-6xl">submissions</h2>
					<img class="w-4 h-7 relative top-0.5 2xl:top-3 md:w-6 md:h-10" src="images/exclamation.webp"/>
				</div>
				<img class="w-13 h-2 md:w-26 md:h-4" src="images/underline.webp" style="transform: scale(-1, 1) rotate(3deg);"/>
			</div>

			<div class="wotc-caption xs:mx-20 sm:mx-30 md:mx-60 xl:mx-70 2xl:mx-90 mt-10 leading-5.5 flex flex-col items-center sm:text-lg xl:text-xl 2xl:text-2xl">
				<p class="mb-4 ">We are currently looking for scripts!</p>
				<p class="font-light  text-gray-300 mb-2">If you have (or would like to write) a script that you would like to be performed in 2026 - let us know! We're looking for a two-hander (ideally for one male and one female performer) that lasts up to 90 minutes to perform at the White Bear Theatre in Kennington.</p>
				<p class="font-light  text-gray-300 mb-4">The script can be about anything, but we're particularly interested in thrillers or psychological drama and horror. Please make sure the script is entirely yours (or you have the permission of a co-writer to submit it).</p>
				<p class="font-light  text-gray-300">We look forward to hearing from you!</p>
				<img class="w-16 my-5" src="images/filigree.webp"/>
				<p class="mb-4 ">Deadline: 6pm Friday 21st November</p>
				<p class="mb-4 ">Submit to: <a class="underline" href="mailto:sitbproductions@gmail.com">sitbproductions@gmail.com</a></p>
			</div>
		</section>
	</div>
	</div>

	<section id="team" class="bg-neutral-950">
		<div class="flex flex-col items-center pt-14">
				<div class="flex flex-row">
					<h2 class="section-heading font-[Fredoka] font-semibold text-white text-3xl md:text-5xl 2xl:text-6xl">meet the team</h2>
				</div>
				<img class="w-13 h-2 md:w-26 md:h-4" src="images/underline.webp" style="transform: scale(-1, 1) rotate(3deg);"/>
		</div>
		<div class="flex flex-col md:flex-row justify-center gap-10 md:gap-30 mt-13 pb-20 mx-20">
			<div class="flex flex-col justify-center items-center">
				<img class="headshot-circle" src="images/macsen.webp"/>
				<p>Macsen Brown</p>
				<p class="font-light text-center text-gray-300">Producer / Actor</p>
			</div>
			<div class="flex flex-col justify-center items-center">
				<img class="headshot-circle" src="images/fiona.webp"/>
				<p>Fiona Popplewell</p>
				<p class="font-light text-center text-gray-300">Director / Actor</p>
			</div>
			<div class="flex flex-col justify-center items-center">
				<img class="headshot-circle" src="images/sam.webp"/>
				<p>Sam Bell</p>
				<p class="font-light text-center text-gray-300">Tech Director / Sound / Actor</p>
			</div>
		</div>
	</section>

	<section id="contact" class="h-180 bg-[url(images/team-hero.webp)] bg-magenta-desat bg-blend-soft-light bg-cover bg-center">
			<div class="flex flex-col items-center pt-30">
				<div class="flex flex-row">
					<h2 class="section-heading font-[Fredoka] font-semibold text-white text-3xl md:text-5xl 2xl:text-6xl">contact us</h2>				</div>
				<img class="w-13 h-2 md:w-26 md:h-4" src="images/underline.webp"/>
			</div>

			<div class="flex flex-col justify-center items-center mt-20">
				<form method="POST" accept-charset="UTF-8" id="form">
					<div class="flex flex-col sm:px-10">
						<div class="flex flex-col sm:flex-row my-2">
							<input class="bg-gray-200/25 rounded-sm p-2 mb-2 sm:mb-0 sm:mr-2 w-full" type="email" name="email" placeholder="Your email">
							<input class="bg-gray-200/25 rounded-sm p-2 w-full" type="text" name="full-name" placeholder="Your name">
						</div>
						<div class="mb-2">
							<textarea class="bg-gray-200/25 rounded-sm w-full p-2 h-30" name="message" placeholder="Message"></textarea>
						</div>
						<!-- add hidden Honeypot input to prevent spams -->
						<input type="hidden" name="_gotcha" style="display:none !important">
						<div class="w-full">
							<button class="cursor-pointer w-full bg-gray-200/25 rounded-sm hover:bg-gray-200/40 p-2" type="submit">Send</button>
						</div>
					</div>
				</form>
			</div>
	</section>



	<footer>
		<div class="h-18 bg-neutral-950 flex flex-row justify-between items-center px-4">
			<div class="w-max flex flex-col justify-center">
				<img class="w-20" src="/images/logomark.webp"/>
			</div>
			<div>
				<p class="footer-text text-gray-500 mx-4 lg:mx-20">© Stuck in the Basement Productions 2025. A website by <a class="underline" href="mailto:samuelbellcreative@gmail.com">Sam Bell</a>. Photos by John Kolikis @jkolikis</p>
			</div>
			<div class="flex flex-row w-max">
				<div class="flex flex-col justify-center">
					<img class="w-15" src="/images/logo.webp" />
				</div>
			</div>
		</div>
	</footer>
</SITBLayout>

<script>
	document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
        e.preventDefault();

        document.querySelector(this.getAttribute('href')).scrollIntoView({
            behavior: 'smooth'
        });
    });
});

    const form = document.getElementById("form");
    form!.addEventListener("submit", formSubmit);

    function formSubmit(e: any) {
        e.preventDefault();
        const formData = new FormData(e.target);

        fetch("https://getform.io/f/anlngmqa", {
            method: "POST",
            body: formData,
            headers: {
                "Accept": "application/json",
            },
        })
        .then(response => {
			console.log(response);
			window.alert("Thank you for contacting us!");
			var elements = document.getElementsByTagName("input");
			for (var ii=0; ii < elements.length; ii++) {
				if (elements[ii].type == "text" || elements[ii].type == "email") {
					elements[ii].value = "";
				}
			}

			var textareas = document.getElementsByTagName("textarea");
			for (var ii=0; ii < textareas.length; ii++) {
				textareas[ii].value = "";
			}
		})
        .catch(error => console.log(error))
    }
</script>

<style>

	@import url('https://fonts.googleapis.com/css2?family=Fredoka:wght@300..700&display=swap');

	.footer-text {
		font-size: 0.8rem;

		@media (max-width: 800px) {
			font-size: 0.6rem;
		}

		@media (max-width: 600px) {
			font-size: 0.4rem;
		}
	}

	.headshot-circle {
		clip-path: circle();
		width: 280px;

		@media (max-width: 1200px) {
			width: 220px;
		}
	}

	ul {
		list-style: decimal-leading-zero;
	}

	.nav-link:hover {
		-webkit-animation: tada 1s;
    	animation: tada 1s;
	}

	body {
		font-family: 'Fredoka', Tahoma, sans-serif;
		color: white;
		
	}

	.stairs-logo {
		width: 85%;

		@media (max-width: 640px) {
			width: 50%;
		}
	}

	.wotc-image {
		max-width: 80vw;
	}

	.shows-background {
		height: 1100px;

		@media (max-width: 1800px)  {
			height: 1000px;
		}


		@media (max-width: 1400px)  {
			height: 1000px;
		}

		@media (max-width: 1150px)  {
			height: 900px;
		}

		
		@media (max-width: 832px) {
			height: 1200px;
		}

		@media (max-width: 640px) {
			height: 1100px;
		}

		@media (max-width: 500px) {
			height: 1100px;
		}
	}

	@font-face {
		font-family: 'Chopin';
		src: url("fonts/ChopinScript.otf") format("opentype");
	}

</style>
