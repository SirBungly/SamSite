---

export type ListItem = {name: string, href: string}

let { items, title } = Astro.props

---

<div class="flex items-center flex-col w-screen middle-from-top">
    <div class="flex flex-col mw-110 w-65">
        <h1 class="font-bold text-2xl sm:text-xl mt-5">{title}</h1>

        <ul>
            {items.map((i: ListItem) => (
                <li>
                    <a href={i.href}>{i.name}</a>
                </li>
            ))}
        </ul>

    </div>
</div>

<style>
	ul {
		list-style: decimal-leading-zero;
	}
    .middle-from-top {
        margin-top: 40vh;
    }
</style>
